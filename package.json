{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:push": "bunx drizzle-kit push",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:studio": "bunx drizzle-kit studio",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "merge-i18n": "bun scripts/merge-i18n.ts",
    "postinstall": "bun run merge-i18n",
    "watch-i18n": "bun scripts/watch-i18n.ts",
    "dev": "concurrently \"next dev --turbopack\" \"bun run watch-i18n\""
